#include<bits/stdc++.h>
using namespace std ; 

int main ()
{
    int t = 1 ; 
    cin >> t ;
    
    while (t--)
    {
      int a ; 
      int b ; 
      cin>>a>>b ; 
      vector<int>v(a) ; 
     int xorr = 0 ; 
      
      for (int i = 0 ; i < a ; i++)
      {      v[i] = i ;
          xorr ^= i ;   }
      
      
      xorr ^= b ; 
      
      if (xorr == 0 )
      { cout <<a ;   }
      
      else if (xorr != a )
      {cout <<a+1 ; }
      else {cout << a+2 ; }
      
      cout <<endl ; 
      
    }
   return 0 ;  
}
